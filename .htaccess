<IfModule mod_rewrite.c>
    # Activar el módulo de reescritura
    RewriteEngine On

    # Regla: Si la solicitud NO es a un archivo o carpeta existente
    # Esto asegura que assets/css/style.css no se redirija
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirige todo el tráfico a index.php para que el enrutador PHP lo maneje
    # Q=URL solicitada, L=Última regla, E=Entorno (opcional)
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>